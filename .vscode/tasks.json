{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and run",
        "type": "shell",
        "command": "clang++",  // Replace with "g++" if you prefer
        "args": [
          "${file}",  // Compile the current source file
          "-o",
          "jspwTest",  // Output filename
          "&&",
          "./jspwTest",  // Run the compiled program
          "<",
          "input.txt",    // Redirect input from file
          ">",
          "output.txt",   // Redirect output to file
          "&&",
          "rm",  // macOS command to delete files
          "jspwTest"      // Delete the compiled executable
        ],
        "presentation": {
          "reveal": "never"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"  // Assuming similar error format, adjust if needed
      }
    ]
  }